import React from "react";
import { useParams } from "react-router-dom";

// import WildliferecordList from "../components/WildliferecordList";

import { useQuery } from "@apollo/react-hooks";
import { QUERY_ANIMAL } from "../utils/queries";

const SingleAnimal = (props) => {
  const { id: animalId } = useParams();

  const { loading, data } = useQuery(QUERY_ANIMAL, {
    variables: { id: animalId },
  });

  const animal = data?.animal || {};

  if (loading) {
    return <div>Loading...</div>;
  }

  return (
    <div>
      <div className="card mb-3">
        <p className="card-header">
          <span style={{ fontWeight: 700 }} className="text-light">
            {animal.username}
          </span>
          {""}
          animal on {animal.createdAt}
        </p>
        <div className="card-body">
          <p>{animal.thoughtText}</p>
        </div>
      </div>

      {/* {animal.wildliferecordCount > 0 && <WildliferecordList reactions={animal.wildliferecords} /> */}
    </div>
  );
};

export default SingleAnimal;
